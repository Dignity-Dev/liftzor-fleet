<!-- container-fluid -->

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Manage Driver</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Driver</a></li>
                        <li class="breadcrumb-item active">Manage Driver</li>
                    </ol>
                </div>



            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Driver Management</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>

                <!-- Display error message if it exists -->
                <div class="container mt-5">

                    <h1 class="mb-4">Driver List</h1>
                    <% if (error) { %>
                        <p class="text-danger mb-4">Error:
                            <%= error %>
                        </p>
                        <!-- Use Bootstrap class for red text -->
                        <% }else{ %>
                            <!-- end of error message if it exists -->

                            <div class="card-body  table-responsive">
                                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Driver ID</th>
                                            <th>Fullname</th>
                                            <th>Phone No</th>
                                            <th>Email</th>
                                            <th>KYC Status</th>
                                            <th>Vehicle Name</th>
                                            <th>Vehicle Reg No</th>
                                            <th>Vehicle Model</th>
                                            <th>Vehicle Type</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (drivers && drivers.length > 0) { %>
                                            <% drivers.forEach((driver,index) => { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= driver.userID %>
                                                    </td>
                                                    <td>
                                                        <%= driver.fullName %>
                                                    </td>
                                                    <td>
                                                        <a href="tel:+234817655004">
                                                            <%= driver.phoneNumber %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="mailto:Adewaleola23@gmail.com">
                                                            <%= driver.emailAddress %>
                                                        </a>
                                                    </td>
                                                    <td><span class="badge bg-info-subtle text-success"> <%= driver.kycStatus %></span></td>
                                                    <td>
                                                        <%= driver.vehicleName %>
                                                    </td>
                                                    <td>
                                                        <%= driver.vehicleRegNo %>
                                                    </td>
                                                    <td>
                                                        <%= driver.vehicleModel %>
                                                    </td>
                                                    <td>
                                                        <%= driver.vehicleType %>
                                                    </td>
                                                    <td><span class="badge bg-info"> <%= driver.onlineStatus %></span></td>
                                                    <td>
                                                        <div class="dropdown d-inline-block">
                                                            <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                                            <ul class="dropdown-menu dropdown-menu-end">
                                                                <li><a href="/driver/<%= driver.userID %>" class="dropdown-item"><i
                                                        class="ri-eye-fill align-bottom me-2 text-muted"></i>
                                                    View</a></li>
                                                                <!-- <li><a href="/update-driver/:id" class="dropdown-item edit-item-btn"><i
                                                        class="ri-pencil-fill align-bottom me-2 text-muted"></i>
                                                    Edit</a></li>
                                                                <li>
                                                                    <button id="sa-warning" class="dropdown-item remove-item-btn">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                                </button>
                                                                </li> -->
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% }  %>

                                    </tbody>
                                </table>
                            </div>
                            <% }%>

                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->







    </div>
    <!-- container-fluid -->