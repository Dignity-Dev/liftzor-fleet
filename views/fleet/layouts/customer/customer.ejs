<!-- container-fluid -->

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Manage Customer</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Customer</a></li>
                        <li class="breadcrumb-item active">Manage Customer</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Customer Management</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>
                <div class="container mt-5">

                    <div class="card-body  table-responsive">
                        <% if (error) { %>
                            <p class="text-danger mb-4">
                                <%= error %>
                            </p>
                            <!-- Use Bootstrap class for red text -->
                            <% }else{ %>
                                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>SN</th>
                                            <th>Customer ID</th>
                                            <th>Customer</th>
                                            <th>Email</th>
                                            <th>Phone No</th>
                                            <th>Date Join</th>
                                            <!-- <th>Status</th> -->
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (customers && customers.length > 0) { %>
                                            <% customers.forEach((customer, index) => { %>
                                                <tr>
                                                    <td>
                                                        <%= index  + 1%>
                                                    </td>
                                                    <td>
                                                        <%= customer.userID %>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-shrink-0 me-2">
                                                                <img src="assets/images/users/avatar-1.jpg" alt="" class="avatar-xs rounded-circle material-shadow" />
                                                            </div>
                                                            <div class="flex-grow-1">
                                                                <%= customer.fullName %>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <%= customer.emailAddress %>
                                                    </td>
                                                    <td>
                                                        <%= customer.phoneNumber %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(customer.registerDate).toLocaleDateString('en-US', {
                                                            year: 'numeric', 
                                                            month: 'long', 
                                                            day: 'numeric'
                                                        }) %>
                                                    </td>
                                                    <!-- <td><span class="badge bg-info">Active</span></td> -->
                                                    <td>
                                                        <div class="dropdown d-inline-block">
                                                            <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                                            <ul class="dropdown-menu dropdown-menu-end">

                                                                <li><a href="/customer/<%= customer.userID %>" class="dropdown-item"><i
                                                        class="ri-eye-fill align-bottom me-2 text-muted"></i>
                                                    View</a></li>
                                                                <!-- <li><a href="/update-customer/:id" class="dropdown-item edit-item-btn"><i
                                                        class="ri-pencil-fill align-bottom me-2 text-muted"></i>
                                                    Edit</a></li> -->
                                                                <!-- <li>
                                                                    <button id="sa-warning" class="dropdown-item remove-item-btn">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                                </button>
                                                                </li> -->
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% }  %>
                                    </tbody>
                                </table>
                    </div>
                    <% } %>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->







    </div>

    <!-- container-fluid -->